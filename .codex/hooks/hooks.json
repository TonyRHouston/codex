{
  "description": "Workspace hooks for stable skill routing",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".codex/hooks/session_start_check_index.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".codex/hooks/pre_task_validate_skills.sh"
          }
        ]
      }
    ]
  }
}
